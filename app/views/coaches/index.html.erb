<center><h2>Get to Know Our Coaches</h2></center>

<h3>Find A Coach By Experience:</h3> 
  <%= form_tag("/coaches", method: "get") do %>
    <%= text_field_tag :years %>
<h3>Find A Coach By Region:</h3> 
    <%= select_tag "region", options_from_collection_for_select(@coaches, "region", "region"), include_blank: true %>
    <%= submit_tag "Filter" %>
  <% end %>
  <br>

 <center><p><h3>Don't know who you're looking for?</h3></p></center>
 <center><p><h4><%= link_to "See our most popular coach!", most_lessons_path%></h4></p></center>

<% @coaches.each do |coach| %>
<fieldset>
<p><strong>Name:</strong> <%= link_to coach.name, coach_path(coach) %></p>
<p><strong>Profile:</strong> <%= coach.profile %></p>
<p><strong>Years of Experience:</strong> <%= coach.years %></p>
<% if @student %> 
	<p><center><%= link_to "Schedule a Lesson with #{coach.name}", new_lesson_path %></center></p>
	<%end%>
<p><%= link_to "View This Coach's Lessons", coach_lessons_path(coach) %></p>
</fieldset><br>
<% end %>